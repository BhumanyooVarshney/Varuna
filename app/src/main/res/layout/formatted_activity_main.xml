<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#37728C"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EASY WATER"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="200dp"
        android:background="#fcf9f7">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/kampaani"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="#AA000000"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout">

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_marginTop="200dp"
        android:background="#57B2BE"
        >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="325dp"
        android:background="#214C8D"
        >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"
        android:background="#d2214c8d"
        >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="325dp"
        android:background="#9757b2be"
        android:layout_marginLeft="200dp"
        >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="475dp"
        android:background="#868080"
        >


    </RelativeLayout>

</RelativeLayout>